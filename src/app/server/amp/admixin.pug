mixin ampAd(width, height, pos, layout)
    amp-ad(
        width=width
        height=height
        type="doubleclick"
        layout=(layout ? layout : "responsive")
        data-slot="/13534306/"+locals.config.site.adTaggingId+entity.parentUrl
        json='{"targeting":{"env": "'+locals.config.ads.targets.env+'", "pos":'+pos+', "pageId": "'+entity.id+'"}}'
    )&attributes(attributes)
