        div(class="main")
            h1(itemProp="headline") #{entity.contentTitle}
            span(itemProp="description")
                p(class="article__summary") #{entity.contentSummary}
            div(class="social-share")
                amp-social-share(
                    type="facebook"
                    width="60"
                    height="44"
                    data-param-text=entity.contentTitle
                    data-param-app_id=locals.config.services.faceBookAppID
                )
                amp-social-share(
                    type="pinterest"
                    width="60"
                    height="44"
                )
            amp-img(
