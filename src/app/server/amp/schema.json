{
    "@context": "http://schema.org",
    "@type": "NewsArticle",
    "mainEntityOfPage": "${req.app.locals.config.site.host}${req.data.entity.url}",
    "headline": "${req.data.entity.contentTitle}",
    "datePublished": "${req.data.entity.pageDateCreated}",
    "dateModified": "${req.data.entity.updated_at}",
    "description": "${req.data.entity.contentSummary}",
    "author": {
        "@type": "Person",
        "name": "Staff"
    },
    "publisher": {
    "@type": "Organization",
        "name": "${req.app.locals.config.site.name}",
        "logo": {
            "@type": "ImageObject",
            "url": "${req.app.locals.config.site.host}/assets/logos/NowToLove.svg",
            "width": 124,
            "height": 30
        }
    },
    "image": {
        "@type": "ImageObject",
        "url": "${req.data.entity.contentImageUrl}",
        "height": 574,
        "width": 690
    }
}
