{
  "name": "share-automation",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "test:high": "bash -c \"./node_modules/.bin/chimp chimp.js --browser=phantomjs --format=rerun:@rerun.txt --jsonOutput=reports/regression.json --tags=@now --tags=@high && npm run html_report\"",
    "test:med": "bash -c \"./node_modules/.bin/chimp chimp.js --format=rerun:@rerun.txt --jsonOutput=reports/regression.json --tags=@now --tags=@med && npm run html_report\"",
    "test:low": "bash -c \"./node_modules/.bin/chimp chimp.js --format=rerun:@rerun.txt --jsonOutput=reports/regression.json --tags=@now --tags=@low && npm run html_report\"",
    "test:nzlow": "bash -c \"./node_modules/.bin/chimp chimp.js --format=rerun:@rerun.txt --jsonOutput=reports/regression.json --tags=@nznow --tags=@low && npm run html_report\"",
    "test:rerun": "bash -c \"./node_modules/.bin/chimp chimp.js @rerun.txt --jsonOutput=reports/regression.json && npm run html_report\"",
    "all:test": "bash -c \"./node_modules/.bin/chimp chimp.js --browser=phantomjs --format=rerun:@rerun.txt --jsonOutput=reports/regression.json --tags=@now\"",
    "single": "bash -c \"./node_modules/.bin/chimp chimp.js --jsonOutput=reports/regression.json\"",
    "once": "npm run single",
    "html_report": "bash -c \"node generate_html.js\"",
    "debug": "bash -c \"./node_modules/.bin/chimp chimp.js --debug\"",
    "watch": "bash -c \"./node_modules/.bin/chimp chimp.js --browser=phantomjs --watch\"",
    "bs": "bash -c \"./node_modules/.bin/chimp chimp.bs.js\"",
    "features": "bash -c \"node runner.js --pMode=features\"",
    "browsers": "bash -c \"node runner.js\"",
    "now:automation": "bash -c \"export URL= && export APP_KEY=now-site && export APP_ENV=automation && npm run all:test\"",
    "now:automation:high": "bash -c \"export URL= && export APP_KEY=now-site && export APP_ENV=automation && npm run test:high\"",
    "share:live": "bash -c \"./node_modules/.bin/chimp chimp.js --tags=@livesharerepo --jsonOutput=reports/regression.json && npm run html_report\"",
    "general:live": "bash -c \"./node_modules/.bin/chimp chimp.js --tags=@live --jsonOutput=reports/regression.json && npm run html_report\"",
    "test:phantom": "export APP_KEY=now-site && npm run features"
  },
  "dependencies": {
    "@bxm/automation": "^1.0.0",
    "cucumber-html-report": "^0.2.8"
  }
}
